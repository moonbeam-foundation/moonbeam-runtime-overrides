[workspace]
members = [
    'runtime/moonbase',
    'runtime/moonbeam',
    'runtime/moonriver',
]

[profile.release]
panic = 'unwind'

[patch.crates-io]
evm = { git = "https://github.com/purestake/evm", branch = "moonbeam-polkadot-POLKADOT_VERSION"}
evm-runtime = { git = "https://github.com/purestake/evm", branch = "moonbeam-polkadot-POLKADOT_VERSION" }
evm-gasometer = { git = "https://github.com/purestake/evm", branch = "moonbeam-polkadot-POLKADOT_VERSION" }
ethereum = { git = "https://github.com/purestake/ethereum", branch = "tgm-0.11.1-typeinfo-patch" }

# Overrides to set Frontier version for code shared across runtime versions.
[patch."https://github.com/nanocryk/frontier"]
fp-evm = { git = "https://github.com/purestake/frontier", branch = "jsonrpsee-moonbeam-polkadot-POLKADOT_VERSION" }
pallet-evm = { git = "https://github.com/purestake/frontier", branch = "jsonrpsee-moonbeam-polkadot-POLKADOT_VERSION" }

# Overrides to set Substrate version for code shared across runtime versions.
[patch."https://github.com/nanocryk/substrate-1"]
sp-api = { git = "https://github.com/purestake/substrate", branch = "jsonrpsee-moonbeam-polkadot-POLKADOT_VERSION" }
sp-core = { git = "https://github.com/purestake/substrate", branch = "jsonrpsee-moonbeam-polkadot-POLKADOT_VERSION" }
sp-externalities = { git = "https://github.com/purestake/substrate", branch = "jsonrpsee-moonbeam-polkadot-POLKADOT_VERSION" }
sp-io = { git = "https://github.com/purestake/substrate", branch = "jsonrpsee-moonbeam-polkadot-POLKADOT_VERSION" }
sp-runtime = { git = "https://github.com/purestake/substrate", branch = "jsonrpsee-moonbeam-polkadot-POLKADOT_VERSION" }
sp-runtime-interface = { git = "https://github.com/purestake/substrate", branch = "jsonrpsee-moonbeam-polkadot-POLKADOT_VERSION" }
sp-std = { git = "https://github.com/purestake/substrate", branch = "jsonrpsee-moonbeam-polkadot-POLKADOT_VERSION" }
